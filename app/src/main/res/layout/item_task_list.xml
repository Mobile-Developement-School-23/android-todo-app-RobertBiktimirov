<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    
    <CheckBox
        android:id="@+id/is_choose_box_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="19dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/type_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/is_choose_box_task"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/is_choose_box_task"
        app:layout_constraintTop_toTopOf="@+id/is_choose_box_task"
        tools:src="@drawable/arrow" />

    <TextView
        android:id="@+id/title_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="52dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/type_task"
        app:layout_constraintTop_toTopOf="@id/is_choose_box_task"
        tools:text="Купить сыр" />

    <TextView
        android:id="@+id/data_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="22-05-2012"
        android:alpha="0.3"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_task"
        app:layout_constraintStart_toStartOf="@id/title_task"/>

    <ImageView
        android:id="@+id/info_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/info_outline"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/is_choose_box_task"
        app:layout_constraintBottom_toBottomOf="@id/is_choose_box_task"/>

</androidx.constraintlayout.widget.ConstraintLayout>